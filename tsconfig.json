{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
    "public/data/*.js"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    "dist",
  ],
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ]
    }
  }
}